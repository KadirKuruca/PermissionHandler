<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Permission Handler"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_location_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Permission"
        app:icon="@drawable/ic_location"
        app:iconSize="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_location_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_location_permission" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_notification_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Permission"
        app:icon="@drawable/ic_notification"
        android:layout_marginTop="24dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_permission" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_notification_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_notification_permission" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_camera_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Permission"
        app:icon="@drawable/ic_camera"
        app:iconSize="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_notification_permission" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_camera_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_camera_permission" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_microphone_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Audio Permission"
        app:icon="@drawable/ic_microphone"
        app:iconSize="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_camera_permission" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_microphone_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_microphone_permission" />

</androidx.constraintlayout.widget.ConstraintLayout>